template(name="recentMentions")
  .list
    if endDate
      p.centered
        b Posts before:
        | #{endDate}
    each sources
      article.source
        .source--details.details
          h1
            a.promed-link.featured.article-header-text(href="#" uri=uri)= postSubject
          .time-link
            p {{ageOrDate date}}
            span.seperator
            a.fa.fa-newspaper-o.promed-link(href="#" uri=uri)
        ul.source-mentions.keword-in-context-list.list--sub-group.list-unstyled
          each mentionsForSource _id
            li
              p.keword-in-context #{kwic}
    else
      if ready
        p.no-priors.centered.subtle No Recent Mentions
      else
        +loader classes='inline'

  +proMedModal
