template(name="recentAgents")
  each articles
    .panel.panel-default
      .panel-heading
        h4
          a(href=uri) {{postSubject}}
        p {{age date}}
      div
        table#recentAgentsTable.table.table-striped
          tbody
            each recentAgentsForArticle _id collapsed
              tr
                td.recentlyMentionedInfectiousAgentsTableRow(data-agentname=word)
                  h4.rmia-word
                    a(href="/detail/{{plus word}}")= word
                  if priorArticle
                    if dm
                      span.underline Months since prior mention:
                        a(href=priorArticle)= months
                    else
                      span Days since prior mention:
                        a(href=priorArticle)= days
                  else
                    span.no-priors No Prior Mentions
            if collapsed
              .more
                button(type="button").btn.btn-info Show All Infectious Agents for Article
