template(name='header')
  .header.container-fluid-padded
    a.logo(href="/")
      img(src="/images/logo.svg" alt="Novel Infectious Agent Monitor")
    nav.main-nav
      ul.list-unstyled
        li.dropdown
          a.feeds(href='#', data-toggle='dropdown')
            .feed #{region}
              i.fa.fa-angle-down
          ul.dropdown-menu.region-selector(role='menu')
            li All Feeds
            each feeds
              li #{label}
        li
          a(href="/about") About
