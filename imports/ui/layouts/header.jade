template(name='header')
  .header.container-fluid-padded
    a.logo(href="/")
    nav.main-nav
      ul.list-unstyled
        li.dropdown
          a.feeds(href='#', data-toggle='dropdown')
            span.feed
              span Feeds
                span #{region}
              i.fa.fa-angle-down
          ul.dropdown-menu.region-selector(role='menu')
            li All Feeds
            each feeds
              li #{label}
        li
          a(href="/about")
            span About
