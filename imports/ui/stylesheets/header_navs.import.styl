
.header
  display flex
  .logo
    padding-top 1em
    padding-bottom 1em

.main-nav
  margin-left auto
  display flex
  align-items center
  ul
    display flex
    margin-bottom 0
    height 100%
    > li
      display flex
      align-items center
      cursor pointer
      &:hover
        background $primary-light
      a
        padding 0 1em
        text-transform uppercase
        font-weight 300
        font-size 1.3em
        color $nav-text-color

  .dropdown
    &:hover
      background $primary-light
  a
    padding 0 1em
    text-transform uppercase
    text-decoration none
    font-weight 300
    font-size 1.5em
    color $d-gray

.logo
  width 420px

.about
  float right
  margin-top 22px
  font-size 1.5em
  color $d-gray

#feed
  margin-top 12px
  color #999999

.feedText,
.aboutText
  font-family Lato
  color $d-gray
  font-size 1.5em
  margin-right -25px

.nav-tabs
  text-align center
  border-bottom 3px solid $primary
  margin-bottom 20px

.nav-tabs > li
.nav-pills > li
  float none
  display inline-block
  min-width 300px
  margin-bottom 0
  letter-spacing $letter-spacing

.nav-tabs > li > a
.nav-tabs > li > a:hover
.nav-tabs > li > a:focus
.nav-tabs > li > a:active
  color $primary
  background-color $primary-light
  border 1px solid lighten($primary, 60%)
  border-bottom 0

.nav-tabs > li > a:hover
  background-color darken($primary-light, 3%)
  color darken($primary, 10%)

.nav-tabs > li.active > a
.nav-tabs > li.active > a:hover
.nav-tabs > li.active > a:focus
  border 0
  color white
  font-weight bold
  background-color $primary

#proMedIFrame
  width 100%
  height 600px

.modal-body
  padding 0px

.modal-header
  padding 5px 5px 5px 20px

button.fa.fa-times.close.fa-2x
  margin-top 5px
  margin-right 5px

.regionSelector
  z-index 1041
