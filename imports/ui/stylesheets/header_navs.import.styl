$nav-text-color = lighten($body-text, 25%)

.header
  display flex
  .logo
    padding-top 1em
    padding-bottom 1em

.main-nav
  margin-left auto
  display flex
  align-items center
  > ul
    display flex
    margin-bottom 0
    height 100%
    > li
      display flex
      align-items center
      cursor pointer
      &:hover
        background $primary-light
      a
        padding 0 1em
        text-transform uppercase
        font-weight 300
        font-size 1.3em
        color $nav-text-color

  .dropdown
    &:hover
      ul
        display block

  .dropdown-menu
    top 100%
    left auto
    right 0
    transform translate(0,0)
    float none
    width 100%
    border 0
    margin 0
    padding 0
    box-shadow none
    background $primary-light
    min-width 200px
    border-top-left-radius 0
    border-top-right-radius 0
    border-bottom-left-radius 4px
    border-bottom-left-radius 4px
    > li
      font-size 1em
      text-transform capitalize
      padding .45em .75em
      color $nav-text-color
      cursor pointer
      &:hover
        background $primary
      &:first-of-type
        font-weight 600

.logo
  width 420px

.about
  float right
  margin-top 22px
  font-size 1.5em
  color $d-gray

.feedText
.aboutText
  font-family Lato
  color $d-gray
  font-size 1.5em
  margin-right -25px

.tabs
  position relative
  display flex
  align-items center
  justify-content center
  flex-direction column
  margin-top 40px
  margin-bottom 0
  +above(2)
    padding-right 20%
    padding-left 20%
    flex-direction row

.tabs > li
.nav-pills > li
  flex 1 0
  text-align center
  letter-spacing $letter-spacing
  +above(2)
    min-width 300px
    margin 0 .5em

.tabs > li > a
.tabs > li > a:hover
.tabs > li > a:focus
.tabs > li > a:active
  display block
  padding .75em 1em
  background-color lighten($primary-light, 20%)
  border 1px solid lighten($primary, 60%)
  border-bottom 0
  border-top-left-radius 4px
  border-top-right-radius 4px
  color darken($primary, 20%)
  font-size 1.25em

.tabs > li > a:hover
  background-color darken($primary-light, 3%)
  color darken($primary, 10%)

.tabs > li.active > a
.tabs > li.active > a:hover
.tabs > li.active > a:focus
  border-color $primary
  background-color $primary
  color $body-text
  font-weight 600

.tab-content
  border-top 2px solid $primary
  padding-top 2em

#proMedIFrame
  width 100%
  height 600px

.modal-body
  padding 0px

.modal-header
  padding 5px 5px 5px 20px

button.fa.fa-times.close.fa-2x
  margin-top 5px
  margin-right 5px
