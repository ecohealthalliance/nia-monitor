.navbar
  height 60px

.navbar-default
  padding-top 6px
  margin-bottom 6px
  background-color transparent
  border none

.logo
  position absolute
  top 3px
  height 50px
  width 420px
  margin-left -50px
  background-position center center
  text-indent -9999px

.about
  float right
  margin-top 22px
  font-size 1.5em
  color #999999

.aboutText
  font-family Lato
  color #999999
  font-size 1.5em
  line-height 1.3
  margin-right -25px

.nav-tabs
  text-align center
  border-bottom 3px solid $primary
  margin-bottom 20px

.nav-tabs > li
.nav-pills > li
  float none
  display inline-block
  min-width 300px
  margin-bottom 0
  letter-spacing $letter-spacing

.nav-tabs > li > a
.nav-tabs > li > a:hover
.nav-tabs > li > a:focus
.nav-tabs > li > a:active
  color $primary
  background-color $primary-light
  border 1px solid lighten($primary, 60%)
  border-bottom 0

.nav-tabs > li > a:hover
  background-color darken($primary-light, 3%)
  color darken($primary, 10%)

.nav-tabs > li.active > a
.nav-tabs > li.active > a:hover
.nav-tabs > li.active > a:focus
  border 0
  color white
  font-weight bold
  background-color $primary
