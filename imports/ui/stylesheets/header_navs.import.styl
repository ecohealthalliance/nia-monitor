.header
  display flex
  .logo
    flex 1
    height 40px
    margin-top 1em
    margin-bottom 1em
    margin-left 1em
    background url("/images/logo-simple.svg") no-repeat
    +above(3)
      height 50px
      background url("/images/logo.svg") no-repeat

.main-nav
  margin-left auto
  display flex
  align-items stretch
  > ul
    display flex
    margin-bottom 0
    align-items stretch
    > li
      display flex
      justify-content center
      align-items stretch
      cursor pointer
      &.open
      &:not(.dropdown):hover
        background $primary-light
      a
        display flex
        align-items center
        padding 0 1em
        text-transform uppercase
        font-weight 300
        font-size 1em
        color $nav-text-color
        text-align center
        +above(2)
          font-size 1.3em

  .dropdown-menu
    top 100%
    left auto
    right 0
    transform translate(0,0)
    float none
    width 100%
    border 0
    margin 0
    padding 0
    box-shadow none
    background $primary-light
    min-width 200px
    border-top-left-radius 0
    border-top-right-radius 0
    border-bottom-left-radius 4px
    border-bottom-left-radius 4px
    outline 5px solid alpha(white, 80%)
    > li
      font-size 1em
      text-transform capitalize
      padding .5em .85em
      color $nav-text-color
      cursor pointer
      &:hover
        background $primary
      &:first-of-type
        font-weight 600

.feed
  i
  span
    display inline-block
    vertical-align middle
  span
    text-align right
    span
      display block
      font-size 50%

.logo
  width 420px

.tabs
  position relative
  display flex
  align-items stretch
  margin-bottom 0
  width 100%
  +above(2)
    flex-direction row
  +above(3)
    margin-top 40px
  +above(5)
    width 65%
    max-width $max-ui-width
    justify-content center
    margin-right auto
    margin-left auto

.tabs > li
  display flex
  flex 1
  justify-content center
  align-items center
  letter-spacing $letter-spacing
  background-color lighten($primary-light, 20%)
  border 1px solid lighten($primary, 60%)
  +above(4)
    margin 0 .5em

.tabs > li > a
.tabs > li > a:hover
.tabs > li > a:focus
.tabs > li > a:active
  padding .75em 1em
  border-bottom 0
  color lighten($nav-text-color, 10%)
  font-size .9em
  text-align center
  +above(2)
    font-size 1.25em
  +above(4)
    border-top-left-radius 4px
    border-top-right-radius 4px

.tabs > li:hover
  background-color darken($primary-light, 3%)

.tabs > li.active
.tabs > li.active:hover
.tabs > li.active:focus
  border-color $primary
  background-color $primary

.tabs > li.active > a
  color $body-text

.tab-content
  border-top 2px solid $primary
  padding-top 2em

#proMedIFrame
  width 100%
  height 600px

.modal-body
  padding 0px

.modal-header
  padding 5px 5px 5px 20px

button.fa.fa-times.close.fa-2x
  margin-top 5px
  margin-right 5px
