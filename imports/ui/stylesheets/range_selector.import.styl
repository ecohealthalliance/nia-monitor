.range-selector
  display flex
  align-items center
  justify-content flex-start
  margin 0
  li
    margin-right .5em
    border-radius 4px
    background-color lighten($primary-light, 20%)
    border 1px solid lighten($primary, 60%)
    text-align center
    cursor pointer
    &:last-of-type
      margin-right 0
    +above(2)
      flex-grow 0
    &.active
      &
      &:hover
        background $primary
        border-color $primary
      a
        color $body-text
    &:hover
      background darken(@background-color, 10%)
      border-color darken(@background-color, 10%)
  a
    padding .7em .85em
    display block
    color $body-text
    font-size 1em
    line-height 1
    +above(600px)
      font-size .85em
    +above(3)
      padding-top .5em
      padding-bottom .5em
      font-size 1em
    &:hover
      color $body-text
