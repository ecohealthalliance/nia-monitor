.keyword-in-context-list
  li
    position relative
    display flex
    flex-direction column
    align-items center
    justify-content center
    padding-top 1.75em
    padding-bottom 1.75em
    &::before
    &::after
      position absolute
      left 0
      width 10%
      background linear-gradient(to right, white, alpha(white, 0))
      top 0
      bottom 0
      content ''
      z-index 1
      +above(3)
        display none
    &::after
      left auto
      right 0
      background linear-gradient(to left, white, alpha(white, 0))

.keyword-in-context-table
  width 100%
  tr
    border-bottom 1px solid lighten($m-gray, 20%)
  tr:last-child
    border-bottom 0
  td
    line-height 1.6em
    letter-spacing .01em
    font-size .8em
    padding 1.5em 0
    +above(2)
      font-size .9em
    +above(3)
      font-size 1em
  td:nth-child(1)
    width 45%
    min-width 150px
    padding-left 1.5em
    text-align right
    vertical-align top
  td:nth-child(2)
    max-width 250px
    padding-right 1.5em
    vertical-align bottom
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    span
      font-weight 800
.recent-mentions--header
  background $secondary
  padding 2.5em
  margin-bottom 4em
  +above(3)
    padding 3.5em
  h1
    margin-top 0
    color $body-text

.mention--details
  display flex
  align-items center
  justify-content center
  flex-direction column
  margin 2em auto 0 auto
  max-width $max-ui-width
  +above(3)
    flex-direction row
  .seperator
    border-right 1px solid $secondary-light
    align-self stretch
    display none
    +above(3)
      display block
  .descriptor
    margin-bottom 2em
    +above(3)
      margin 0
  .descriptor
  .term
    text-align center
    +above(3)
      padding 0 4em
      min-width 50%
    h1
    h2
      font-weight 400
      font-size 1.5em
      color white
      margin 0
      letter-spacing .03em
      line-height 1.5em
      +above(2)
        font-size 2em
    span
      display block
      font-size 1.25em
      margin-bottom .25em
      font-weight 300
      text-transform uppercase
      color lighten($secondary-light, 20%)
      +above(2)
        font-size 1.5em
