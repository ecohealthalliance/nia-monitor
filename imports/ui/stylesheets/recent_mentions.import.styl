.source-mentions
  li
    position relative
    display flex
    flex-direction column
    align-items center
    justify-content center
    padding-top 1.75em
    padding-bottom 1.75em
    &:before
    &:after
      position absolute
      left 0
      width 10%
      background linear-gradient(to right, white, alpha(white, 0))
      top 0
      bottom 0
      content ''
      z-index 1
      +above(3)
        display none
    &:after
      left auto
      right 0
      background linear-gradient(to left, white, alpha(white, 0))

.kwic
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  margin 0
  font-weight 800
  letter-spacing .01em
  font-size .8em
  +above(2)
    font-size .9em
  +above(3)
    font-size 1em
  span
    position absolute
    white-space nowrap
    top 0
    font-weight 400
    letter-spacing 0
  :nth-child(1)
    left 0
    transform translate(-102%, 0)
  :nth-child(2)
    right 0
    transform translate(105%, 0)

.source
  .source--details
    flex-direction column
    align-items center
    h1
    .time-link
      text-align center
      flex 1
    h1
      margin-bottom .25em
    .time-link
      p
        color $d-gray
