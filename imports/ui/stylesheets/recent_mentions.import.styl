.keword-in-context-list
  li
    position relative
    display flex
    flex-direction column
    align-items center
    justify-content center
    padding-top 1.75em
    padding-bottom 1.75em
    &::before
    &::after
      position absolute
      left 0
      width 10%
      background linear-gradient(to right, white, alpha(white, 0))
      top 0
      bottom 0
      content ''
      z-index 1
      +above(3)
        display none
    &::after
      left auto
      right 0
      background linear-gradient(to left, white, alpha(white, 0))

.keword-in-context
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  margin 0
  font-weight 800
  letter-spacing .01em
  font-size .8em
  +above(2)
    font-size .9em
  +above(3)
    font-size 1em
  span
    position absolute
    white-space nowrap
    top 0
    font-weight 400
    letter-spacing 0
  :nth-child(1)
    left 0
    transform translate(-102%, 0)
  :nth-child(2)
    right 0
    transform translate(105%, 0)

.recent-mentions--header
  background $secondary
  padding 2.5em
  margin-bottom 4em
  +above(3)
    padding 3.5em
  h1
    margin-top 0
    color $body-text

.mention--details
  display flex
  align-items center
  justify-content center
  flex-direction column
  margin 2em auto 0 auto
  max-width $max-ui-width
  +above(3)
    flex-direction row
  .seperator
    border-right 1px solid $secondary-light
    align-self stretch
    display none
    +above(3)
      display block
  .descriptor
    margin-bottom 2em
    +above(3)
      margin 0
  .descriptor
  .term
    text-align center
    +above(3)
      padding 0 4em
      min-width 50%
    h1
    h2
      font-weight 400
      font-size 1.5em
      color white
      margin 0
      letter-spacing .03em
      line-height 1.5em
      +above(2)
        font-size 2em
    span
      display block
      font-size 1.25em
      margin-bottom .25em
      font-weight 300
      text-transform uppercase
      color lighten($secondary-light, 20%)
      +above(2)
        font-size 1.5em
