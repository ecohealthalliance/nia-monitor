.trend-interval
  margin-bottom 1em
  +above(2)
    margin-right 2em
    margin-bottom 0
    flex 2

.trend-date
  +above(2)
    margin-left auto
    flex 1

.trending-agents
  li
    display flex
    align-items flex-end
    flex-direction row
  .relative-strength
    margin-left auto

.power-bar
  display inline-block
  vertical-align middle
  width 1.3em
  height .3em
  margin-left .5em
  background-color $primary

.range-selector
  display flex
  margin 0
  li
    flex 1
    margin-right .5em
    border-radius 4px
    background-color lighten($primary-light, 20%)
    border 1px solid lighten($primary, 60%)
    text-align center
    &:last-of-type
      margin-right 0
    +above(2)
      flex 0
    &.active
      &
      &:hover
        background $primary
        border-color $primary
      a
        color $body-text

    &:hover
      background darken(@background-color, 5%)
      border-color darken(@background-color, 5%)
  a
    padding .75em 1em
    display block
    color $body-text
    font-size .9em
    +above(2)
      padding-top .3em
      padding-bottom .3em
      font-size 1em
    &:hover
      color $body-text
