.list
  width 100%
  max-width $max-ui-width
  margin-right auto
  margin-left auto
  +above(5)
    width 65%
  a
    color $body-text
    &:hover
    &.featured:hover
      color darken($positive, 10%)
    &.featured
      color $secondary

  .details
    display flex
    flex-direction column
    border-bottom 1px solid $border-gray
    padding 0 1.5em
    padding-bottom 1.1em
    +above(3)
      flex-direction row
      align-items flex-end
    h1
      flex 4
      font-size 1.25em
      font-weight 500
      line-height 1.5em
      margin 0 0 .5em 0
      +above(3)
        margin 0
    .time-link
      flex 1
      display flex
      align-items center
      font-style italic
      +above(3)
        maring-left auto
        justify-content flex-end
      .promed-link
        font-size 1.25em
          margin-top 2px
      p
        margin 0

article
  margin-bottom 5em
  &.centered-content
    .details
      flex-direction column
      align-items center
      h1
      .time-link
        text-align center
        flex 1
      h1
        margin-bottom .25em
      .time-link
        p
          color $d-gray

.list--sub-group
  li
    padding 1em 1.5em
    border-bottom 1px solid $border-gray
    color $body-text

.list--options
  display flex
  justify-content space-around
  align-items flex-start
  flex-direction column
  padding 0 1.5em 1.2em 1.5em
  border-bottom 1px solid $border-gray
  +above(2)
    align-items flex-end
    flex-direction row
  h2
    font-size 1.25em
    font-weight 400
    color $secondary
    margin 0 0 .5em 0
