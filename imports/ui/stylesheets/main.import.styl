.rmia-word:hover
  cursor pointer
  cursor hand
  color $secondary

.fmia-word:hover
  cursor pointer
  cursor hand
  color $secondary

.no-priors
  font-weight bold
  color $primary

#trendingRange
#timelineRange
  width 100px
  margin 10px

.iaHeader
  margin-top 20px
  color $primary
  text-align-last right

.more
  margin-top -20px
  margin-bottom 50px
  text-align center

.load-more-articles
  display block
  padding 10px
  margin 0 auto

.loading
  text-align center

.clear
  clear both

.articleHeader
  font-weight bold
  margin-top 2em

.articleHeaderText
  color $secondary
  margin-left -10px

.mainHeaderText
  color $primary
  padding 20px
  text-align center
  margin-top -50px

.headerDescriptionContainer
  background-color $secondary
  color white
  padding 50px
  line-height 1.3
  text-align center
  margin-bottom 30px
  p
    letter-spacing .03em
    &:last-of-type
      margin-bottom 0

.headerDescription
  line-height 1.3
  font-size 1.6em
  margin-bottom 1em

.boldrange
  font-weight bold

.btn-show-all-ia
  border 1px solid $positive
  border-top-left-radius 0
  border-top-right-radius 0
  border-top  0
  background none
  color $positive
  padding .75em 5em
  margin 0 auto
  &:hover
    background lighten(@color, 90%)
    color darken(@color, 40%)
  &:active
  &:active:focus
  &:focus
    background lighten(@color, 75%)
    color darken(@color, 40%)
    box-shadow none
    outline 0


#timelineDiv
  width 100%

.chartjs-hidden-iframe
  position relative
