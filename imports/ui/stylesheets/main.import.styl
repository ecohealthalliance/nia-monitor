.rmia-word:hover
  cursor pointer
  cursor hand
  color $secondary

.fmia-word:hover
  cursor pointer
  cursor hand
  color $secondary

.no-priors
  font-weight bold
  color $primary

#trendingRange
#timelineRange
  width 100px
  margin 10px

.iaHeader
  margin-top 20px
  margin-right 10px
  color $primary
  text-align-last right

.more
  margin-top -20px
  margin-bottom 50px
  text-align center

.load-more-articles
  display block
  padding 10px
  margin 0 auto

.loading
  text-align center

.clear
  clear both

.articleHeader
  font-weight bold

.articleHeaderText
  color $secondary
  margin-left -10px

.mainHeaderText
  color $primary
  padding 20px
  text-align center
  margin-top -50px

.dbSummaryHeaderText
  color $primary
  padding 20px
  text-align center

.descriptor-header-text
  color $primary
  text-align center

.description-heading
  font-weight 700

.app-description-container
  position relative
  padding-top 4em
  padding-bottom 4em
  background-color $secondary
  color white
  text-align center
  font-weight 300
  p
    padding-left 20%
    padding-right 20%
    letter-spacing .05em
    &:last-of-type
      margin-bottom 0

.header-description
  line-height 1.5
  font-size 1em
  margin-bottom 1em
  +above(2)
    font-size 2em

.page-description
  font-weight 300
  line-height 1.7em
  margin-bottom 20px
  &.main
    font-size 1.5em
  &.minor
    font-size: 1.35em

.boldrange
  font-weight bold

.btn-show-all-ia
  border 1px solid $positive
  border-top-left-radius 0
  border-top-right-radius 0
  border-top  0
  background none
  color $positive
  padding .75em 5em
  margin 0 auto
  &:hover
    background lighten(@color, 90%)
    color darken(@color, 40%)
  &:active
  &:active:focus
  &:focus
    background lighten(@color, 75%)
    color darken(@color, 40%)
    box-shadow none
    outline 0

#timelineDiv
  width 100%

.chartjs-hidden-iframe
  position relative

.main-content
  margin-top 30px

.hide-app-desc
.show-app-desc
  position absolute
  cursor pointer

.show-app-desc
  top 50%
  right 15px
  transform translate(0, -50%)

.hide-app-desc
  top 15px
  right 15px

.fa-question-circle
  color grey

.highlight
  background-color yellow

label
  color $primary

.range-selector
.timeline-range-selector
  padding-left 0
  a
    color $secondary
  li
    display inline
    margin 5px
  li.active a
    text-decoration underline
    color $secondary-dark

.timeline-range-selector
  display inline
  margin-left .5em

.timeline-range-controls
  line-height 2.5em
  text-align center
