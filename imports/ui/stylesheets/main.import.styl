body
  padding-bottom 100px

.rmia-word:hover
  cursor pointer
  cursor hand
  color blue

.fmia-word:hover
  cursor pointer
  cursor hand
  color blue

.spinner
  position fixed
  background-color grey
  opacity .3
  width 100%
  height 100%
  z-index 99999

.spinner-element
  font-size 300px
  position fixed
  left 40%
  top 30%
  z-index 99999

.spinner-margin
  margin 40px

.underline
  text-decoration underline

.panel-default > .panel-heading
  color $secondary-dark

.no-priors
  font-weight bold
  color crimson

#trendingRange
  width 100px
  margin 10px

.iaHeader
  margin-top 20px

.more
  text-align center
  padding-top 20px

.load-more-articles
  display block
  padding 10px
  margin 0 auto

.loading
  text-align center

.clear
  clear both

.nav-tabs > li, .nav-pills > li
    float none
    display inline-block
.nav-tabs
    text-align center
