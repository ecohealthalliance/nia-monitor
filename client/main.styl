$primary = #FF970B
$secondary = #0BA5FF
$secondary-dark = darken($secondary, 40%)

.rmia-word:hover
  cursor pointer
  cursor hand
  color blue

.fmia-word:hover
  cursor pointer
  cursor hand
  color blue

.spinner
  position fixed
  background-color grey
  opacity .3
  width 100%
  height 100%
  z-index 99999

.spinner-element
  font-size 300px
  position fixed
  left 40%
  top 30%
  z-index 99999

.underline
  text-decoration underline

.navbar
  height 60px

.logo
  position absolute
  top 3px
  left 50%
  height 50px
  width 420px
  transform translate(-50%, 0)
  margin-left 0
  background url(images/logo.svg) no-repeat
  background-position center center

.panel-default > .panel-heading
  color $secondary-dark
