template(name='main')
  +header

  .col-md-6.pull-left
    .panel.panel-default
      .panel-body
        +left

  .col-md-6.pull-right
    .panel.panel-default
      .panel-body
        +right

template(name='left')
  #recentlyMentionedInfectiousAgents
    .panel.panel-default
      .panel-heading
        h4 Recently Mentioned Infectious Agents
      div
        +recentAgents

template(name='right')
  #frequentlyMentionedInfectiousAgents
    .panel.panel-default
      .panel-heading
        h4 Frequently Mentioned Infectious Agents
      div
        +frequentAgents

template(name='timeline')
  #timeline(style='width:400px height:200px')
    canvas#canvas(width='400', height='200')
